<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="10dp"
    android:id="@+id/card">
    <TextView
        android:id="@+id/address_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="mohamed abdallah"
        android:gravity="center"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="@color/black">
    </TextView>
    <TextView
        android:id="@+id/address_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="010101010101"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/address_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">
       </TextView>
    <TextView
        android:id="@+id/address_city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="zagazig"
        android:gravity="center"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp">
    </TextView>
    <TextView
        android:id="@+id/address_country"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Egypt"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/address_city"
        app:layout_constraintTop_toBottomOf="@id/address_phone"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp">
    </TextView>
    <TextView
        android:id="@+id/address_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="3 st zag 5 abcd address"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address_city"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp">
    </TextView>

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/address_address"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:background="@color/veryLightGray"/>

    <CheckBox
        android:id="@+id/address_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mark As Default"
        android:gravity="center"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_marginStart="10dp">
    </CheckBox>
    <ImageView
        android:id="@+id/address_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/trash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>