<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFD9D9"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.productPageFeature.ProductDetails">

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Swipe_pager"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/product_page_thumbnail"
            />

        <TextView
            android:id="@+id/product_page_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150 % OFF "
            android:background="#FFF"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:textColor="#ff0101"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="right|bottom" />

    </FrameLayout>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/pic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/product_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d5c5a4"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="156dp"
            android:layout_marginTop="16dp"
            ></View>

        <TextView
            android:id="@+id/product_page_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d5c5a4"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="156dp"
            android:layout_marginTop="16dp"
            ></View>

        <TextView
            android:id="@+id/product_page_vendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d5c5a4"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="156dp"
            android:layout_marginTop="16dp"
            ></View>

        <TextView
            android:id="@+id/product_page_product_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d5c5a4"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="156dp"
            android:layout_marginTop="16dp"
            ></View>

        <TextView
            android:id="@+id/product_page_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d5c5a4"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="156dp"
            android:layout_marginTop="16dp"
            ></View>

        <TextView
            android:id="@+id/product_page_inventory_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            />
        <TextView
            android:id="@+id/xx_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Detail"
            android:textColor="#000"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            />
        <View
            android:id="@+id/xx_div"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d5c5a4"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="156dp"
            android:layout_marginTop="16dp"
            ></View>

        <TextView
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_page_description"
            android:text=""
            android:textColor="#000"
            android:textSize="14dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="5dp"
            />
    </LinearLayout>

            <!--*******ADD TO BAG********-->-->


            <LinearLayout
                android:id="@+id/addtobag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_below="@+id/linear1"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <Button
                    android:padding="5dp"
                    android:id="@+id/product_page_add_to_cart"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add to cart"
                    android:gravity="center"
                    android:letterSpacing="0.09"
                    android:layout_weight="1"/>
                <Button
                    android:padding="5dp"
                    android:id="@+id/product_page_add_to_favorite"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add to favorite"
                    android:gravity="center"
                    android:letterSpacing="0.09"
                    android:layout_weight="1"/>

            </LinearLayout>

</RelativeLayout>
    </ScrollView>
</RelativeLayout>
